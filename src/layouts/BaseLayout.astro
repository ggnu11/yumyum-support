---
export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "YumYum 앱의 공식 지원 사이트입니다.", ogImage = "/og.png" } = Astro.props;
const { site, base } = Astro.site ? { site: Astro.site.href, base: import.meta.env.BASE_URL } : { site: '', base: '/' };
---

<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | YumYum Support</title>
  <meta name="description" content={description} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={site + Astro.url.pathname} />
  <meta property="og:title" content={title + " | YumYum Support"} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={site + base + ogImage.replace(/^\//, '')} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={site + Astro.url.pathname} />
  <meta property="twitter:title" content={title + " | YumYum Support"} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={site + base + ogImage.replace(/^\//, '')} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={base + "favicon.svg"} />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={site + Astro.url.pathname} />
</head>
<body class="min-h-screen bg-gray-50 text-gray-900 flex flex-col">
  <!-- Header -->
  <header class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex items-center space-x-2">
          <img 
            src={'src/assets/' + "logo.png"} 
            alt="YumYum 로고" 
            class="w-8 h-8 object-contain"
          />
          <a href={base} class="text-xl font-bold text-gray-900 hover:text-orange-500 transition-colors">
            YumYum Support
          </a>
        </div>
        
        <nav class="hidden md:flex space-x-8">
          <a href={base} class="text-gray-700 hover:text-orange-500 font-medium transition-colors">
            홈
          </a>
          <a href={base + "faq/"} class="text-gray-700 hover:text-orange-500 font-medium transition-colors">
            FAQ
          </a>
          <a href={base + "privacy/"} class="text-gray-700 hover:text-orange-500 font-medium transition-colors">
            개인정보처리방침
          </a>
          <a href={base + "terms/"} class="text-gray-700 hover:text-orange-500 font-medium transition-colors">
            이용약관
          </a>
        </nav>
        
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button type="button" class="text-gray-700 hover:text-orange-500" id="mobile-menu-button">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
      
      <!-- Mobile menu -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-200">
          <a href={base} class="block px-3 py-2 text-gray-700 hover:text-orange-500 font-medium">홈</a>
          <a href={base + "faq/"} class="block px-3 py-2 text-gray-700 hover:text-orange-500 font-medium">FAQ</a>
          <a href={base + "privacy/"} class="block px-3 py-2 text-gray-700 hover:text-orange-500 font-medium">개인정보처리방침</a>
          <a href={base + "terms/"} class="block px-3 py-2 text-gray-700 hover:text-orange-500 font-medium">이용약관</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <main class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-gray-200 mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <div class="flex items-center space-x-2">
          <img 
            src={'src/assets/' + "logo.png"} 
            alt="YumYum 로고" 
            class="w-6 h-6 object-contain"
          />
          <span class="text-gray-700 font-medium">YumYum</span>
        </div>
        
        <div class="flex space-x-6 text-sm text-gray-600">
          <a href={base + "privacy/"} class="hover:text-orange-500 transition-colors">개인정보처리방침</a>
          <a href={base + "terms/"} class="hover:text-orange-500 transition-colors">이용약관</a>
          <a href={base + "faq/"} class="hover:text-orange-500 transition-colors">FAQ</a>
        </div>
        
        <div class="text-sm text-gray-500">
          © 2025 YumYum. All rights reserved.
        </div>
      </div>
    </div>
  </footer>

  <!-- Mobile menu toggle script -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const button = document.getElementById('mobile-menu-button');
      const menu = document.getElementById('mobile-menu');
      
      button?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
      });
    });
  </script>
</body>
</html>
